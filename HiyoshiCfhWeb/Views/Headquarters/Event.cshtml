@model HiyoshiCfhWeb.Models.Admiral

@{
    ViewBag.Title = "イベント";
    var tags = HiyoshiCfhWeb.Models.Event.Events.Last().SortieTags;
    var admiral = Model;
}

@Html.Partial("_HeaderPartial", admiral)

<table class="table">
    <tr>
        <th></th>
        <th>E1</th>
        <th>E2</th>
        <th>E3</th>
        <th>E4</th>
        <th>E5</th>
    </tr>
    <tr style="background: @tags[0].WebColor; color: #fff">
        <td>
            @tags[0].Name
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td style="background: #fff"></td>
        <td></td>
    </tr>
    <tr style="background: @tags[1].WebColor; color: #fff">
        <td>
            @tags[1].Name
        </td>
        <td style="background: #fff"></td>
        <td style="background: #fff"></td>
        <td style="background: #fff"></td>
        <td></td>
        <td></td>
    </tr>
</table>

<h3>出撃識別札</h3>

<div class="raw">
    @foreach (var tag in tags)
    {
        <div class="col-md-3 col-sm-6">
            <h4>@tag.Name</h4>
            <table class="table">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        艦名
                    </th>
                    <th>
                        レベル
                    </th>
                </tr>
                @foreach (var ship in admiral.Ships.Where(x => x.SortieTag == tag.InternalId).OrderByDescending(x => x.Level))
                {
                    <tr style="border-left: 5px solid @tag.WebColor">
                        <td>
                            @Html.DisplayFor(modelItem => ship.ShipId)
                        </td>
                        <td>
                            @Html.ActionLink(ship.ShipInfo.Name, "Index", "Ship", routeValues: new { id = ship.ShipInfo.Name }, htmlAttributes: null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ship.Level)
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
